<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="337dp"
            android:layout_height="137dp"

            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/quickblanco" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="323dp"
            android:layout_height="411dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/boton_estilo"
            app:layout_constraintBottom_toTopOf="@+id/btn_cuenta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <EditText

                android:id="@+id/txt_UsuarioC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="53dp"
                android:backgroundTint="@android:color/darker_gray"
                android:cursorVisible="true"
                android:ems="10"
                android:fitsSystemWindows="false"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/gris" />

            <EditText
                android:id="@+id/txt_Correo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_UsuarioC"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="49dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="49dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/gris" />

            <EditText

                android:id="@+id/txt_codP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_Correo2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="53dp"
                android:layout_marginBottom="-55dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"

                android:hint="Codigo Postal"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/gris"
                android:textColorLink="@color/colorPrimary" />

            <EditText

                android:id="@+id/txt_TelUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_codP"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="-56dp"
                android:backgroundTint="@android:color/darker_gray"
                android:ems="10"
                android:hint="Numero de telefono"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/gris"
                android:textColorLink="@color/colorPrimary" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView4"
                app:hintTextAppearance="@style/MyHintStyle"

                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="51dp"
                android:layout_marginBottom="-19dp"
                app:counterEnabled="true"
                app:counterMaxLength="7"
                app:passwordToggleEnabled="false"
               >

                <EditText
                    android:id="@+id/txt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="7"
                    android:textColor="@color/colorPrimary"
                    android:textColorHighlight="@color/colorPrimary"


                    android:theme="@style/MyEditText" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="59dp"
                android:layout_height="58dp"
                android:layout_above="@+id/rd_mujer"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="56dp"
                android:layout_marginEnd="197dp"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/mujer" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="59dp"
                android:layout_height="58dp"
                android:layout_above="@+id/rd_hombre"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/hombre" />

            <RadioButton

                android:id="@+id/rd_mujer"
                android:layout_width="64dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="75dp"
                android:layout_marginEnd="61dp"
                android:layout_marginBottom="22dp"
                android:layout_toStartOf="@+id/rd_hombre" />

            <RadioButton

                android:id="@+id/rd_hombre"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="58dp"
                android:layout_marginBottom="21dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_cuenta"
            android:layout_width="178dp"
            android:layout_height="32dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/registrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
            />


    </android.support.constraint.ConstraintLayout>
</ScrollView>