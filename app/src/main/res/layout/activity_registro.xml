<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="334dp"
        android:layout_height="101dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_UsuarioC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/app" />

    <EditText
        android:id="@+id/txt_UsuarioC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/darker_gray"
        android:cursorVisible="true"
        android:ems="10"
        android:fitsSystemWindows="false"
        android:hint="@string/escribe_tu_usuario"
        android:inputType="textPersonName"

        android:textColor="@color/ColorText"
        android:textColorHighlight="@color/ColorText"
        android:textColorHint="@color/ColorText"
        android:textColorLink="@color/ColorText"
        app:layout_constraintBottom_toTopOf="@+id/txt_Correo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cuenta"
        android:layout_width="143dp"
        android:layout_height="27dp"
        android:layout_marginBottom="232dp"
        android:background="@drawable/registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/ColorText"
        android:textColorHint="@color/ColorText"
        android:textColorLink="@color/ColorText"
        app:layout_constraintBottom_toTopOf="@+id/btn_cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_TelUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Numero de telefono"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/ColorText"
        android:textColorHint="@color/ColorText"
        android:textColorLink="@color/ColorText"
        app:layout_constraintBottom_toTopOf="@+id/txt_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_Correo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/ColorText"
        android:textColorHint="@color/ColorText"
        android:textColorLink="@color/ColorText"
        app:layout_constraintBottom_toTopOf="@+id/txt_codP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_codP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@android:color/darker_gray"
        android:ems="10"
        android:hint="Codigo Postal"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/ColorText"
        android:textColorHint="@color/ColorText"
        android:textColorLink="@color/ColorText"
        app:layout_constraintBottom_toTopOf="@+id/txt_TelUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>