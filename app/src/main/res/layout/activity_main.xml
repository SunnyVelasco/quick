<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="357dp"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="136dp"
        android:background="@drawable/boton_estilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txt_contra"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#212121"
            android:ems="10"
            android:hint="Escribe tu contraseña"
            android:inputType="textPassword"
            android:textColor="#212121"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible" />

        <EditText
            android:id="@+id/txt_usuario"
            android:layout_width="274dp"
            android:layout_height="wrap_content"

            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="22dp"
            android:backgroundTint="#212121"
            android:ems="10"

            android:textColor="#212121"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/txt_usuario"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/txt_usuario"
            android:background="@drawable/logotree" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="32dp"
            android:layout_toStartOf="@+id/txt_contra"
            android:background="@drawable/key" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="141dp"
            android:layout_marginTop="17dp"
            android:text="Bienvenido"
            android:textColor="#E53935"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_iniciarS"
        android:layout_width="207dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_rojo"
        android:drawableStart="@drawable/candado"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rd_Sesion"
        android:text="LOGIN" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="206dp"
        android:layout_height="136dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/quickblanco"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/Rd_Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:buttonTint="@color/ColorText"
        android:text="No cerrar sesión"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

</android.support.constraint.ConstraintLayout>