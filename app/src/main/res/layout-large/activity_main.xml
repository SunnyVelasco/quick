<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/boton_estilo">

        <EditText
            android:id="@+id/txt_contra"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#212121"
            android:ems="10"
            android:hint="Escribe tu contraseña"
            android:inputType="textPassword"
            android:textColor="#212121"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible" />

        <EditText
            android:id="@+id/txt_usuario"
            android:layout_width="334dp"
            android:layout_height="wrap_content"


            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#212121"
            android:ems="10"
            android:hint="Escribe tu usuario"
            android:inputType="textPersonName"
            android:textColor="#212121"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/txt_usuario"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/logotree" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/key" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="201dp"
            android:layout_marginTop="15dp"
            android:text="Bienvenido"
            android:textColor="#E53935"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_iniciarS"
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/botonlogin"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="551dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="132dp"
        android:background="@drawable/quickblanco" />

    <RadioButton
        android:id="@+id/Rd_Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="160dp"
        android:buttonTint="@color/ColorText"
        android:text="No cerrar sesión"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

</RelativeLayout>