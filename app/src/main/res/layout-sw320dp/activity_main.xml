<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="187dp"
        android:layout_below="@+id/imageView12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/boton_estilo">

        <EditText
            android:id="@+id/txt_contra"
            android:layout_width="262dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#212121"
            android:ems="10"
            android:hint="Escribe tu contraseña"
            android:inputType="textPassword"
            android:textColor="#212121"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible" />

        <EditText
            android:id="@+id/txt_usuario"
            android:layout_width="260dp"
            android:layout_height="wrap_content"


            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#212121"
            android:ems="10"
            android:hint="Escribe tu usuario"
            android:inputType="textPersonName"
            android:textColor="#212121"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/txt_usuario"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/txt_usuario"
            android:background="@drawable/logotree" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="73dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="30dp"
            android:layout_toStartOf="@+id/txt_contra"
            android:background="@drawable/key" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="21dp"
            android:text="Bienvenido"
            android:textColor="#E53935"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RadioButton
        android:id="@+id/Rd_Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_iniciarS"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="22dp"
        android:buttonTint="@color/ColorText"
        android:text="No cerrar sesión"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_iniciarS"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/botonlogin"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/quickblanco" />

</RelativeLayout>